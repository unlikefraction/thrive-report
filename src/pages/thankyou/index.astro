---
import PageLayout from "@layouts/PageLayout.astro";
import TopLayout from "@layouts/TopLayout.astro";
import BottomLayout from "@layouts/BottomLayout.astro";
import { SUBSCRIBE } from "@consts";
import Subscribe from "@components/Subscribe";

const isProduction = Astro.url.hostname !== "localhost";
---

{isProduction && (
  <script is:inline>
    if (window.gtag) {
      gtag("event", "subscription_success", {
        event_category: "conversion",
        event_label: "thrive_report",
      });
    }
  </script>
)}


<PageLayout title={SUBSCRIBE.TITLE} description={SUBSCRIBE.DESCRIPTION}>
    <TopLayout>
        <div class="animate page-heading">
            <h1>Thanks for subscribing!</h1>
        </div>
    </TopLayout>
    <BottomLayout>
        <div class="animate">
            <p>We're excited to have you on board. See you upcoming sunday.</p>
        </div>
    </BottomLayout>
</PageLayout>
